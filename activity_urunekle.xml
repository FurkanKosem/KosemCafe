<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".urunekle"
    android:orientation="vertical"
    android:background="@color/blue">


    <EditText
        android:id="@+id/urunadi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="15dp"
        android:hint="Ürününüzün adını giriniz."
        android:textColorHint="@color/white"
        android:textStyle="italic"
        />

    <EditText
        android:id="@+id/urunkategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="15dp"
        android:hint="Ürününüzün kategorisiniz giriniz"
        android:textColorHint="@color/white"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/urunfiyat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="15dp"
        android:hint="Ürününüzün fiyatını giriniz."
        android:textColorHint="@color/white"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/butonekle"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shape_capsule"
        android:text="Ekle"
        android:textColor="@color/white"
        android:textSize="3.5mm"
        android:textStyle="bold">

    </Button>



</LinearLayout>