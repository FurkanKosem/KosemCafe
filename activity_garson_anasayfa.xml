<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:orientation="vertical"
    tools:context=".garsonAnasayfa">


    <ImageView
        android:id="@+id/pngresmi"
        android:layout_width="92dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:src="@mipmap/pngresmi" />


    <ImageView
        android:id="@+id/youtube"
        android:layout_width="98dp"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="201dp"
        android:layout_marginLeft="201dp"
        android:layout_marginTop="3dp"
        android:src="@mipmap/youtube" />

    <ImageView
        android:id="@+id/instagram"
        android:layout_width="97dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="293dp"
        android:layout_marginLeft="293dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/instagram" />

    <ImageView
        android:id="@+id/bildirim"
        android:layout_width="95dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="114dp"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="4dp"
        android:src="@mipmap/bildirim" />

    <Button
        android:id="@+id/sicak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="100dp"
        android:layout_weight="5"
        android:text="Sıcak İçecekler" />

    <Button
        android:id="@+id/soguk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="100dp"
        android:layout_weight="5"
        android:text="Soğuk İçecekler"
        android:textSize="15dp" />

    <Button
        android:id="@+id/yemek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soguk"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="5"
        android:text="Yemek" />


    <Button
        android:id="@+id/nargile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:text="Nargile"
        android:textSize="15dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/salata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nargile"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="5"
        android:gravity="center_vertical"
        android:text="Salata"
        android:textSize="15dp" />


</RelativeLayout>



