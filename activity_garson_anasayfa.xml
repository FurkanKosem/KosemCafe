<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".garsonAnasayfa">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/pngresmi"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:src="@mipmap/pngresmi" />


    <ImageView
        android:id="@+id/youtube"
        android:layout_width="87dp"
        android:layout_height="93dp"
        android:src="@mipmap/youtube" />

    <ImageView
        android:id="@+id/instagram"
        android:layout_width="97dp"
        android:layout_height="88dp"
        android:src="@mipmap/instagram" />

    <ImageView
        android:id="@+id/bildirim"
        android:layout_width="95dp"
        android:layout_height="83dp"
        android:src="@mipmap/bildirim" />

</LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
       >

        <Button
            android:id="@+id/sicak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sıcak İçecekler" />

        <Button
            android:id="@+id/soguk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soğuk İçecekler"
            android:textSize="15dp" />


        <Button
            android:id="@+id/yemek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Yemek" />

        <Button
            android:id="@+id/nargile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nargile"
            android:textSize="15dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/salata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salata"
            android:textSize="15dp" />


    </LinearLayout>

</LinearLayout>


