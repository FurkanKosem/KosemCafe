<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".kayitol"
    android:background="@color/blue">

    <EditText
        android:id="@+id/txtUsernameRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="Adiniz"
        android:padding="20dp"
        android:textColorHint="@color/white"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/txtEmailRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:padding="20dp"
        android:hint="Emailiniz"
        android:textColorHint="@color/white"
        android:textStyle="italic"/>


    <EditText
        android:id="@+id/txtPasswordRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:padding="20dp"
        android:hint="Sifreniz"
        android:textColorHint="@color/white"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:padding="20dp"
        android:hint="Tip"
        android:textColorHint="@color/white"
        android:textStyle="italic"/>


    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_shape_capsule"
        android:text="Kayit Ol"
        android:textColor="@color/white"
        android:textSize="3.5mm"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:text="Hesabinizla Giris Yapin"
        android:textColor="@color/white"
        android:textSize="3mm"
        android:textStyle="bold"
        android:background="@drawable/btn_shape_capsule"/>




    </LinearLayout>